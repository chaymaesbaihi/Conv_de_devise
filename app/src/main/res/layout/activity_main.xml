    <TextView
        android:id="@+id/currency_converted"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:hint="@string/result"
         />

     


</LinearLayout>